Bootstrap: docker
From: ghcr.io/rocker-org/devcontainer/geospatial:4

%environment
    export APPTAINER_BUILD_DATE=date

%files
    src/install/install-r-libs.sh
    src/install/install-vscode.sh

%post
    apt-get update && export DEBIAN_FRONTEND=noninteractive
    apt-get upgrade -y
    sh src/install/install-r-libs.sh
    sh src/install/install-vscode.sh
    apt-get autoremove -y && apt-get clean -y && rm -rf /var/lib/apt/lists/*
